<div id="items" class="container-fluid">
  <table class="table">
    <thead>
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th>Borrowed</th>
      <th>Item type</th>
      <% if action_name == 'borrowed' %>
        <th class="text-center">
          Borrowed to:
        </th>
      <% end %>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td class="text-center"><%= item.active ? 'âœ…' : 'ðŸš«' %></td>
        <td class="text-center"><%= item.borrowed ? 'âœ…' : 'ðŸš«' %></td>
        <td><%= item.item_type %></td>
        <% if action_name == 'borrowed' %>
          <th class="text-center">
            <%= item.borrowed_to.email %> <%= distance_of_time_in_words_to_now(item.borrowed_at) %> ago
          </th>
        <% end %>
        <td>
          <%= link_to "Show this item", item, class: 'btn btn-primary' %>
          <% if item.requested? %>
            <span class="badge badge-round-pill bg-success">
              Requests: <%= item.rental_requests.count %>
            </span>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>